---
import { Layout } from '@component/global'
---

<Layout title='Error 404'>
  <style>
    main {
      --a: 8deg;
      aspect-ratio: 1;
      border-radius: 20px;
      transform: perspective(400px)
        rotate3d(var(--r, 1, -1), 0, calc(var(--i, 1) * var(--a)));
      mask: linear-gradient(135deg, #000c 40%, #000, #000c 60%);
      -webkit-mask: linear-gradient(135deg, #000c 40%, #000, #000c 60%) 100%
        100%/250% 250%;
      transition: 0.4s;
      cursor: pointer;
    }

    .alt {
      --r: 1, 1;
      mask: linear-gradient(45deg, #000c 40%, #000, #000c 60%);
      -webkit-mask: linear-gradient(45deg, #000c 40%, #000, #000c 60%) 0 100%/250%
        250%;
    }

    main:hover {
      --i: -1;
      mask-position: 0 0;
      -webkit-mask-position: 0 0;
    }

    .alt:hover {
      mask-position: 100% 0;
      -webkit-mask-position: 100% 0;
    }
  </style>
  <main class='mx-auto flex w-full flex-col items-center justify-center'>
    <img
      src='https://media.tenor.com/fKIG2kiLVPgAAAAM/this-is-fine-its-fine.gif'
      alt=''
      class='rounded border-2 shadow-lg'
    />
    <h1 class='text-xl font-bold text-white'>
      La página que buscas no existe o no está disponible
    </h1>
    <button
      onclick='window.history.back()'
      type='button'
      class='mb-2 me-2 rounded-lg bg-gradient-to-r from-red-200 via-red-300 to-yellow-200 px-5 py-2.5 text-center text-sm font-medium text-gray-900 hover:bg-gradient-to-bl focus:outline-none focus:ring-4 focus:ring-red-100 dark:focus:ring-red-400'
    >
      Regresar
    </button>
  </main>
</Layout>
