{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
      "@globals": ["src/components/global"],
      "@retos": ["src/components/retos"],
      "@component/*": ["src/components/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["utils/*"],
      "@img/*": ["src/assets/img/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@icon/*": ["src/assets/svg/icon/*"],
      "@data/*": ["src/data/*"],
      "@ascii/*": ["src/assets/ascii/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist"]
}
